<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scut.joe.unidesktop">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_SMS"/>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/uni"
        android:label="@string/app_name"
        android:roundIcon="@drawable/uni"
        android:supportsRtl="true">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <!-- 增加launcher配置-->
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".apps.SearchActivity"
                  android:theme="@style/TransparentStyleBottom" >

        </activity>
        <activity android:name=".apps.MessageActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/message_name"/>
        <activity android:name=".apps.ContactsActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/contacts_name"/>
        <activity android:name=".apps.PhoneActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/phone_name"/>
        <activity android:name=".apps.WeatherActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/weather_name"/>

        <service
            android:name=".widget.TimeService"
            android:enabled="true" >
            <intent-filter>
                <action android:name="com.example.idoit.test.TimeService" />
            </intent-filter>
        </service>

        <receiver android:name=".widget.ClockAppWidgetProvider">
            <!-- 广播接收的action：当appwidget改变时 -->
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
                <action android:name="com.wd.appWidgetUpdate"></action>
                <action android:name="android.intent.action.TIME_CHANGED"></action>
                <action android:name="android.intent.action.TIME_TICK"></action>
                <action android:name="android.intent.action.TIME_SET"></action>
            </intent-filter>
            <!-- 设置元数据：将ClockAppWidgetProvider类和AppWidgetProviderInfo对象appwidget_provider_time关联起来 -->
            <meta-data android:name="android.appwidget.provider"
                       android:resource="@xml/provider_info"/>
        </receiver>
    </application>

</manifest>