<?xml version="1.0" encoding="utf-8"?>
<com.scut.joe.unidesktop.container.SquareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <LinearLayout
        android:id="@+id/edit_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/transparent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/layout_50"
            android:layout_height="@dimen/layout_50"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
             />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/delet_iv"
        android:layout_width="@dimen/layout_30"
        android:layout_height="@dimen/layout_30"
        android:layout_alignRight="@id/edit_ll"
        android:layout_alignTop="@id/edit_ll"
        android:padding="8dp"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_flag"
        android:visibility="visible" />

</com.scut.joe.unidesktop.container.SquareLayout>